    <div class="breadcrumbs">
        <a href="/home">Home</a> / <a href="/shop">Shop</a> / <span>Product</span>
    </div>
    <div class="product-container">
        <div class="product-images">
            <div class="thumbnail-list">
                <img src="<%=variantDetails.product_id.images[0].replace('public', '')%>" alt="Wheel thumbnail"
                    class="thumbnail">
                <img src="<%=variantDetails.product_id.images[1].replace('public', '')%>" alt="Wheel thumbnail"
                    class="thumbnail">
                <img src="<%=variantDetails.product_id.images[2].replace('public', '')%>" alt="Wheel thumbnail"
                    class="thumbnail">
            </div>
            <div class="main-image">
                <img src="<%=variantDetails.product_id.images[0].replace('public', '')%>" alt="Wheel">
            </div>
            <style>
                .main-image {
                    position: relative;
                    overflow: hidden;
                }

                .main-image img {
                    width: 100%;
                    height: 100%;
                    transition: transform 0.3s ease;
                }

                .main-image:hover img {
                    transform: scale(2);
                    cursor: zoom-in;
                }

                .favorite-btn {
                    background: rgba(255, 255, 255, 0.9);
                    border: none;
                    border-radius: 20%;
                    width: 50px;
                    height: 50px;
                    display: flex;
                    align-items: center;
                    justify-content: center;
                    cursor: pointer;
                    transition: all 0.3s ease;
                }

                .favorite-btn:hover {
                    background: rgba(190, 214, 55, 0.9);
                    transform: scale(1.1);
                }
            </style>
            <script>
                const mainImageContainer = document.querySelector('.main-image');
                const zoomedImage = mainImageContainer.querySelector('img');

                mainImageContainer.addEventListener('mousemove', (e) => {
                    const rect = mainImageContainer.getBoundingClientRect();
                    const x = e.clientX - rect.left;
                    const y = e.clientY - rect.top;

                    zoomedImage.style.transformOrigin = `${(x / rect.width) * 100}% ${(y / rect.height) * 100}%`;
                });

                mainImageContainer.addEventListener('mouseleave', () => {
                    zoomedImage.style.transformOrigin = 'center center';
                });
            </script>
            <script>
                function updateMainImage(thumbnail) {
                    const mainImage = document.querySelector('.main-image img');
                    mainImage.src = thumbnail.src;
                }

                document.querySelectorAll('.thumbnail').forEach(thumbnail => {
                    thumbnail.addEventListener('click', function () {
                        updateMainImage(this);
                    });
                });

                async function addToWishList(defualtVariantId) {
                    console.log(defualtVariantId);
                    const response = await fetch('/addToWishList', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({ defualtVariantId }),
                    })

                    if (response.ok) {
                        let note = await response.json()
                        console.log(note);
                        Swal.fire({
                            title: "Please Note",
                            text: `${note.message}`,
                            icon: `success`
                        });


                    } else if (!response.ok) {
                        let note = await response.json()
                        Swal.fire({
                            title: "Please Note",
                            text: `${note.message}`,
                            icon: "error"
                        });
                    }
                }
            </script>
        </div>
        <div class="product-info">
            <div class="d-flex flex-row justify-content-between">
                <h1>
                    <%=variantDetails.product_id.productName%>
                </h1>
                <button class="favorite-btn" onclick="addToWishList(`<%= variantDetails._id %>`)">
                    <i class="far fa-heart"></i>
                </button>
            </div>
            <div class="rating">
                <%if(!variantDetails.stock){%>
                    <span class="stock">(Out Of Stock)</span>
                    <%}else{%>
                        <span class="stock">(In Stock)</span>
                        <%}%>
            </div>
            <div>
                <% if(offerPrice>0){%>
                    <%if(offer.productOffer){%>
                        <span class="stock">SPECIAL OFFER FOR THIS PRODUCT (-<%=offerPrice%>)</span>

                        <%} else if(offer.brandOffer) {%>
                            <span class="stock">SPECIAL OFFER FOR THIS BRAND (-<%=offerPrice%>)</span>
                            <%}%>
                                <%}%>
            </div>
            <div class="price">
                <%if(!offerPrice){%>
                    <span id="curr">₹<%=variantDetails.price%></span>
                    <%} else {%>
                        <span id="curr">₹<%=variantDetails.price-offerPrice%></span>
                        <%}%>
                            <% if(offerPrice) {%>
                                <span id="old" class="original-price">₹<%=variantDetails.price%></span>
                                <%}%>
            </div>
            <p class="shipping-note">Price includes Import Duties and Taxes. Free shipping available.</p>

            <div class="size-selection">
                <div class="size-title">Brand: <%=variantDetails.product_id.brand_id.brandName%>
                </div>
                <%if(variantDetails.stock> 0) {%>
                    <div>
                        stocks left <%=variantDetails.stock%>
                    </div>
                    <%}else{%>
                        <div>
                            NO STOCKS AVAILABLE
                        </div>
                        <%}%>
                            <div class="size-title">Choose Size</div>
                            <div class="size-buttons">
                                <% for(let i=0; i < sizes.length; i++) { %>
                                    <button class="size-button" value="<%= sizes[i]._id %>">
                                        <a class="text-decoration-none" href="/product/<%= sizes[i]._id %>">
                                            <%= sizes[i].size %>
                                        </a>
                                    </button>
                                    <% } %>
                            </div>
            </div>
            <% if(variantDetails.stock < 1) { %>
                <button class="cart-btn" id="addToCartBtn"
                    style="width: 100%; background-color: black; color: white; border: none; padding: 0.5rem 1rem; border-radius: 4px; cursor: not-allowed;">
                    NO STOCK AVAILABLE
                </button>
                <% } else if(alreadyInCart.user_id){%>
                    <button class="cart-btn" id="addToCartBtn"
                        style="width: 100%; background-color: black; color: white; border: none; padding: 0.5rem 1rem; border-radius: 4px; cursor: pointer;"
                        onclick="window.location.href='/cart'">
                        <i class="fas fa-shopping-cart"> GO TO CART</i>
                    </button>
                    <% } else { %>
                        <button class="cart-btn" id="addToCartBtn"
                            style="width: 100%; background-color: black; color: white; border: none; padding: 0.5rem 1rem; border-radius: 4px; cursor: pointer;"
                            onclick="window.location.href='/addToCart/<%= variantDetails._id %>'">
                            <i class="fas fa-bag-shopping"> ADD TO CART</i>
                        </button>
                        <% } %>
        </div>
    </div>
    <div class="product-details">
        <h2 class="details-title">Product Details</h2>
        <div class="details-grid">
            <div class="details-text">
                <%=variantDetails.product_id.description%>
            </div>
            <div class="details-specs">
                <p><strong>Size:</strong>
                    <%=variantDetails.size%>
                </p>
                <p><strong>Bolt Pattern:</strong>
                    <%=variantDetails.product_id.boltPattern%>
                </p>
                <p><strong>Finish:</strong>
                    <%=variantDetails.product_id.colour%>
                </p>
            </div>
        </div>
    </div>
    <div class="related-products">
        <h2 class="related-title">RELATED PRODUCTS</h2>
        <div class="products-grid">
            <% related.forEach(element=> { %>
                <div class="product-card">
                    <img src="<%=element.product_id.images[0].replace('public','')%>" alt="Wheel" class="product-image">
                    <div class="product-name">
                        <%=element.product_id.productName%>
                    </div>
                    <div class="product-rating">
                        ★★★★★
                        (4)
                    </div>
                    <div class="product-price">
                        <span class="price-new">₹<%= element.price %></span>
                    </div>
                    <div class="product-price">
                        <span class="price-new">SIZE : <%= element.size %></span>
                    </div>
                    <div class="card-buttons">
                        <a class="cart-btn" href="/product/<%= element._id %>" style="text-decoration: none;">

                            <span style="font-family: Arial, Helvetica, sans-serif "><i class="fas fa-info-circle"></i>
                                View Details</span>
                        </a>
                    </div>
                </div>
                <% }) %>
        </div>
    </div>
