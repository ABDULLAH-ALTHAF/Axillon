    <style>
        .main-container {
            display: flex;
            justify-content: center;
            gap: 2rem;
            padding: 1rem;
            margin-top: 5vh;
            margin-left: 4vw;
            height: 60vh;
            
        }
        
        .confirmation-card {
            background: white;
            width: fit-content;
            border-radius: 20px;
            padding: 40px 30px;
            text-align: center;
            justify-content: center;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .confirmation-card {
    animation: popup 0.9s ease forwards;
}

@keyframes popup {
    0% {
        transform: scale(0.5);
        opacity: 0;
    }
    70% {
        transform: scale(1.1);
        opacity: 1;
    }
    100% {
        transform: scale(1);
    }
}

        
        .success-icon {
            width: 100px;
            height: 100px;
            padding: 6%;
            background: #e6f7ed;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 24px;
        }
        
        .checkmark {
            color: #1eb372;
            font-size: 80px;
        }
        
        h1 {
            color: #1a1f36;
            font-size: 2rem;
            margin-bottom: 26px;
        }



        .button {
    display: inline-block;
    background: #0a0b3b; 
    color: white; 
    border: none;
    border-radius: 8px; 
    padding: 14px 28px; 
    font-size: 1rem; 
    font-weight: 500; 
    text-align: center; 
    text-decoration: none; 
    cursor: pointer;
    transition: all 0.3s ease; 
    margin: 10px 5px; 
    width: 200px; 
}

.button:hover {
    background: #20ec2a; 
    color: #ffffff; 
    box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2); 
}



        /* animation */

        body::before {
    content: '';
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(42, 172, 40, 0.8);
    animation: fade-out 1.5s ease forwards;
    z-index: -1;
}

@keyframes fade-out {
    from {
        opacity: 1;
    }
    to {
        opacity: 0;
    }
}


    </style>
