<style>
    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&display=swap');

    :root {
        --primary-color: #3B82F6;
        --secondary-color: #10B981;
        --text-dark: #1F2937;
        --text-light: #6B7280;
        --bg-light: #F9FAFB;
        --border-color: #E5E7EB;
    }

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: 'Inter', sans-serif;
        background-color: var(--bg-light);
        color: var(--text-dark);
        line-height: 1.6;
    }

    .wishlist-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 2rem;
    }

    .wishlist-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        margin-bottom: 2rem;
        border-bottom: 2px solid var(--primary-color);
        padding-bottom: 1rem;
    }

    .wishlist-title {
        font-size: 2.5rem;
        font-weight: 700;
        color: var(--primary-color);
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .wishlist-title svg {
        color: var(--secondary-color);
    }

    .wishlist-empty {
        text-align: center;
        padding: 5.5rem;
        background-color: white;
        border-radius: 12px;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    }

    .wishlist-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 1.5rem;
    }

    .wishlist-item {
        background-color: white;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .wishlist-item:hover {
        transform: translateY(-10px);
        box-shadow: 0 10px 15px rgba(0,0,0,0.15);
    }

    .wishlist-item-image {
        width: 100%;
        height: 250px;
        object-fit: cover;
        transition: transform 0.3s ease;
    }

    .wishlist-item:hover .wishlist-item-image {
        transform: scale(1.05);
    }

    .wishlist-item-details {
        padding: 1rem;
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .wishlist-item-name {
        font-size: 1.2rem;
        font-weight: 600;
        color: var(--text-dark);
    }

    .wishlist-item-info {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .wishlist-item-price {
        font-size: 1.3rem;
        font-weight: 700;
        color: var(--primary-color);
    }

    .wishlist-item-size {
        background-color: var(--bg-light);
        padding: 0.25rem 0.5rem;
        border-radius: 4px;
        font-size: 0.9rem;
        color: var(--text-light);
    }

    .wishlist-actions {
        display: flex;
        gap: 1rem;
        margin-top: 1rem;
    }

    .btn {
        flex: 1;
        padding: 0.75rem;
        border: none;
        border-radius: 8px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .btn-remove {
        background-color: #EF4444;
        color: white;
    }

    .btn-remove:hover {
        background-color: #DC2626;
    }

    .btn-cart {
        background-color: var(--secondary-color);
        color: white;
    }

    .btn-cart:hover {
        background-color: #059669;
    }

    @media (max-width: 768px) {
        .wishlist-grid {
            grid-template-columns: 1fr;
        }

        .wishlist-title {
            font-size: 2rem;
        }
    }
</style>

<div class="wishlist-container">
    <div class="wishlist-header">
        <h1 class="wishlist-title">
            <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="currentColor" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path>
            </svg>
            My Wishlist
        </h1>
    </div>

    <% if (products.items?.length<1 ) { %>
        <div class="wishlist-empty">
            <h2>Your wishlist is currently empty</h2>
            <p>Explore our collections and add some items!</p>
            <a href="/shop" class="btn btn-shop" style="background-color: #007bff; color: white;">
                Continue Shopping
            </a>
        </div>
    <% } else { %>
        <div class="wishlist-grid">
            <% products.items.forEach(element => { %>
                <%if (element.variant_id.product_id.status==true) {%>
            <div class="wishlist-item">
                <a href="/product/<%=element.variant_id._id%>">
                    <img 
                        class="wishlist-item-image"
                        src="<%=element.variant_id.product_id.images[0].replace('public', '')%>" 
                        alt="<%=element.variant_id.product_id.productName%>" 
                    />
                </a>
                <div class="wishlist-item-details">
                    <h3 class="wishlist-item-name">
                        <%=element.variant_id.product_id.productName%>
                    </h3>
                    <div class="wishlist-item-info">
                        <span class="wishlist-item-price">
                            <!-- â‚¹element.variant_id.price -->
                        </span>
                        <span class="wishlist-item-size">
                            Size: <%=element.variant_id.size%>
                        </span>
                    </div>
                    <div class="wishlist-actions">
                        <button 
                            class="btn btn-remove" 
                            onclick="removeFromWishList('<%=element.variant_id._id%>')">
                            Remove
                        </button>       
                        <% if(element.variant_id.stock < 1) { %>
                            <button class="btn btn-cart" id="addToCartBtn" style="width: 100%; background-color: black; color: white; border: none; padding: 0.5rem 1rem; border-radius: 4px; cursor: not-allowed;">
                                NO STOCK AVAILABLE
                            </button>
                        <% } else { %>
                            <button class="btn btn-cart" id="addToCartBtn" style="width: 100%; background-color: black; color: white; border: none; padding: 0.5rem 1rem; border-radius: 4px; cursor: pointer;" onclick="window.location.href='/addToCart/<%= element.variant_id._id %>'">
                                <i class="fas fa-shopping-cart">ADD TO CART</i>
                            </button>
                        <% } %> 
                    </div>
                </div>
            </div>
                    <%}%>

            <% }) %>
        </div>
    <% } %>
</div>

